{
  "C_Cpp.default.compilerPath": "/opt/toolchains/dc/sh-elf/bin/sh-elf-gcc",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.defines": [
    "_arch_dreamcast"
  ],
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/**",
    "/opt/toolchains/dc/kos/**",
    "/opt/toolchains/dc/kos-ports/**"
  ],
  "C_Cpp.default.intelliSenseMode": "",
  "C_Cpp.files.exclude": {
    "**/.vs": true,
    "**/.vscode": true,
    "**/various": true
  },
  "terminal.integrated.defaultProfile.linux": "kos-bash",
  "terminal.integrated.profiles.linux": {
    "kos-bash": {
      "args": [
        "--init-file",
        "${workspaceFolder}/.vscode/kos_environ.sh"
      ],
      "overrideName": true,
      "path": "/usr/bin/bash"
    }
  }
}
